{
  "name": "book-store",
  "version": "1.0.0",
  "description": "A simple React bookstore app using Vite for development and an Express API for data persistence.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server.js",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "dev:all": "npm run start",
    "start:prod": "node server.js",
    "lint": "eslint . --ext .js,.jsx,.cjs",
    "format": "prettier --write .",
    "test": "vitest --run"
  },
  "dependencies": {
    "lowdb": "^5.0.0",
    "nanoid": "^4.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.14.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^2.8.8",
    "vitest": "^1.4.3",
  "supertest": "^6.3.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.4.3",
    "jsdom": "^22.1.0",
    "vite": "^5.0.0"
  }
  ,
  "eslintConfig": {
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
    "env": { "browser": true, "node": true, "es2021": true }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "printWidth": 100
  }
}
